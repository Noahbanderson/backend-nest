{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:dev:docker": "ENV=dev npm run docker",
    "start:dev": "nest start --watch",
    "start:debug": "concurrently -c \"bgWhite.grey.bold,bgBlue.white.bold\" -n api,worker \"npm:start:debug:api\" \"npm:start:debug:worker\"",
    "start:debug:api": "ENV=dev PROCESS=api nest start --debug 0.0.0.0:9229 --watch --preserveWatchOutput --webpack --webpackPath webpack-hmr.config.js",
    "start:debug:worker": "ENV=dev PROCESS=worker nest start --debug 0.0.0.0:9339 --watch --preserveWatchOutput --webpack --webpackPath webpack-hmr.config.js",
    "start:prod:docker": "ENV=prod npm run docker",
    "start:prod": "concurrently -c \"bgWhite.grey.bold,bgBlue.white.bold\" -n api,worker \"npm:start:prod:api\" \"npm:start:prod:worker\"",
    "start:prod:api": "ENV=prod PROCESS=api node dist/src/main",
    "start:prod:worker": "ENV=prod PROCESS=worker node dist/src/main",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config config/ormconfig.json",
    "typeorm:create": "npm run typeorm migration:create -- -n",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test": "jest",
    "generate:documentation": "npx @compodoc/compodoc -p tsconfig.json -s --theme vagrant",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "check-types": "tsc",
    "pre-commit": "npm run lint && npm run check-types && npm run format && npm run build",
    "docker": "docker-compose --env-file ./config/${ENV}.env up"
  },
  "dependencies": {
    "@adminjs/express": "^4.0.1",
    "@adminjs/nestjs": "^4.0.0",
    "@adminjs/typeorm": "^2.0.1",
    "@casl/ability": "^5.4.3",
    "@nestjs/bull": "^0.4.2",
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/passport": "^8.1.0",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/typeorm": "^8.0.3",
    "adminjs": "^5.5.1",
    "bcryptjs": "^2.4.3",
    "bull": "^3.29.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "concurrently": "^6.5.1",
    "csurf": "^1.11.0",
    "dotenv": "^10.0.0",
    "express-formidable": "^1.2.0",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.2",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@compodoc/compodoc": "^1.1.18",
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/bull": "^3.15.7",
    "@types/cron": "^1.7.3",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.22",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "run-script-webpack-plugin": "0.0.11",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.3.5",
    "webpack": "^5.68.0",
    "webpack-node-externals": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}